  <div class="container-fluid">
    <a class="navbar-brand text-white font-weight-bold">バスケメンバー詳細</a>
    <div class="text-right">
    <%= link_to "ホーム", root_path, class: "btn btn-outline-light"  %>
    <%= link_to "バスケトップ", bsk_members_path, class: "btn btn-outline-light"  %>
    <%= link_to "バスケメンバー登録", new_bsk_member_path, class: "btn btn-outline-light" %>
